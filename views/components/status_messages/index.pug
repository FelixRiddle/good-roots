div(class="fixed mr-40 mt-40 bg-indigo-300 rounded shadow-black shadow-lg" id="statusMessages" hidden)
    //- Top bar
    nav.flex-auto.m-2.p-2
        p Status messages
        button(class="rounded-lg p-2 m-2 inline shadow-black shadow bg-sky-600 hover:bg-sky-200") Close
    
    //- Messages
    if messages
        ul 
        - for(msg of messages)
            li(class=`${msg.error ? "bg-pink-300" : "bg-green-300"} rounded p-1 m-1 shadow-black shadow`)
                p=msg.message
    
