div(class="fixed ml-20 mt-20 bg-indigo-300 rounded shadow-black shadow-lg")
    //- Top bar
    nav.flex-auto.m-2.p-2
        h1 Status messages
        button(class="rounded hover:text-gray-400 p-2 inline") Close
    
    //- Messages
    if messages
        ul 
        - for(msg of messages)
            li(class=`${msg.error ? "bg-pink-300" : "bg-green-300"} rounded p-1 m-1 shadow-black shadow`)
                p=msg.message
    
