extends ../index

block content
    .py-10
        //- Title
        h1.text-4xl.my-10.font-extrabold.text-center Good
            span.font-normal Roots
        
        h2.text-center.text-6xl= page
        
        //- Show errors
        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/register")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Your Name 
                        input#name.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your Name" type="text" name="name" value=user ? user.name : "")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email 
                        input#email.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email" value=user ? user.email : "")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password 
                        input#password.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password" value=user ? user.password : "")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="confirmPassword") Confirm password 
                        input#confirmPassword.w-full.px-3.py-4.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="confirmPassword" value=user ? user.confirmPassword : "")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Already have an account? Log in
                        a.text-gray-500.text-xs(href="/auth/forgotPassword") Forgot password
                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Create account")
